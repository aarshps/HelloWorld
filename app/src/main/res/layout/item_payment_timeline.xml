<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Timeline Indicator -->
    <RelativeLayout
        android:layout_width="32dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/timeline_line_top"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/timeline_dot"
            android:background="?attr/colorOutlineVariant" />

        <View
            android:id="@+id/timeline_dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle_dot"
            android:backgroundTint="?attr/colorPrimary" />

        <View
            android:id="@+id/timeline_line_bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/timeline_dot"
            android:background="?attr/colorOutlineVariant" />

    </RelativeLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/text_payment_date"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Oct 24, 2023" />

        <TextView
            android:id="@+id/text_payment_amount"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="$12.99" />

    </LinearLayout>

</LinearLayout>