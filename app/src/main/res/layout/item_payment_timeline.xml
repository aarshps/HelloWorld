<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Timeline Indicator -->
    <RelativeLayout
        android:layout_width="32dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/timeline_line_top"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/timeline_dot"
            android:background="@drawable/shape_rounded_line"
            android:backgroundTint="?attr/colorOutlineVariant" />

        <View
            android:id="@+id/timeline_dot"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle_dot"
            android:backgroundTint="?attr/colorSecondary" />

        <View
            android:id="@+id/timeline_line_bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/timeline_dot"
            android:background="@drawable/shape_rounded_line"
            android:backgroundTint="?attr/colorOutlineVariant" />

    </RelativeLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/text_payment_date"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Oct 24, 2023" />

        <TextView
            android:id="@+id/text_subscription_name"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            tools:text="Netflix" />

        <TextView
            android:id="@+id/text_payment_amount"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="$12.99" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete_payment"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:icon="@drawable/ic_delete"
        app:iconSize="20dp"
        app:iconTint="?attr/colorError"
        android:contentDescription="Delete Payment" />

</LinearLayout>