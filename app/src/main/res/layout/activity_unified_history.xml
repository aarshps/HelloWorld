<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".UnifiedHistoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:fitsSystemWindows="true"
        android:background="?attr/colorSurface">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Payment History"
            app:titleTextAppearance="?attr/textAppearanceTitleLarge"
            app:contentInsetStart="24dp"
            app:contentInsetEnd="24dp"
            app:navigationIcon="@drawable/ic_back" />
            
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Top: Chart Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:clipChildren="false"
                android:clipToPadding="false">
        
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?attr/materialCardViewFilledStyle"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingVertical="16dp">
                        
                        <HorizontalScrollView
                            android:id="@+id/chart_scroll_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            android:scrollbars="none"
                            android:clipChildren="false"
                            android:clipToPadding="false">
                
                            <com.hora.varisankya.PaymentHistoryChart
                                android:id="@+id/unified_chart"
                                android:layout_width="wrap_content"
                                android:layout_height="250dp" />
                                
                        </HorizontalScrollView>
                        
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btn_chart_back"
                            style="@style/Widget.Material3.FloatingActionButton.Small.Secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginStart="16dp"
                            app:srcCompat="@drawable/ic_back"
                            app:tint="?attr/colorOnSecondaryContainer"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                            android:contentDescription="Go Back"
                            android:visibility="gone"
                            tools:visibility="visible" />
                            
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>
        
            </LinearLayout>
        
            <!-- Bottom: List Section -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                tools:listitem="@layout/item_payment_timeline" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/loading_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorColor="?attr/colorPrimary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/loading_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fetching..."
                style="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
